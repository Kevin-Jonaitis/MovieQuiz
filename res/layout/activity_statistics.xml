<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Statistics" >

     <TextView
         android:id="@+id/stats"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_centerHorizontal="true"
         android:gravity="center"
         android:text="Statistics"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:textColor="#14A5FF"
         android:textSize="65sp"
         android:textStyle="bold" />

     <TextView
         android:id="@+id/quizzesTaken"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/stats"
         android:layout_below="@+id/stats"
         android:text="Quizes Taken: "
         android:textAppearance="?android:attr/textAppearanceLarge" />

     <TextView
         android:id="@+id/numberCorrectStats"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/quizzesTaken"
         android:layout_below="@+id/quizzesTaken"
         android:text="Number Correct:"
         android:textAppearance="?android:attr/textAppearanceLarge" />

     <TextView
         android:id="@+id/numberIncorrectStats"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/numberCorrectStats"
         android:layout_below="@+id/numberCorrectStats"
         android:text="Number Incorrect: "
         android:textAppearance="?android:attr/textAppearanceLarge" />

     <TextView
         android:id="@+id/averageTimeStats"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/numberIncorrectStats"
         android:layout_below="@+id/numberIncorrectStats"
         android:text="Average Time: "
         android:textAppearance="?android:attr/textAppearanceLarge" />

     <TextView
         android:id="@+id/correctLifeTime"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/quizLifeTime"
         android:layout_below="@+id/quizLifeTime"
         android:text="Number Correct:"
         android:textAppearance="?android:attr/textAppearanceLarge" />

     <TextView
         android:id="@+id/incorrectLifeTime"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/correctLifeTime"
         android:layout_below="@+id/correctLifeTime"
         android:text="Number Incorrect: "
         android:textAppearance="?android:attr/textAppearanceLarge" />

     <TextView
         android:id="@+id/averageLifeTime"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/incorrectLifeTime"
         android:layout_below="@+id/incorrectLifeTime"
         android:text="Average Time: "
         android:textAppearance="?android:attr/textAppearanceLarge" />

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/averageTimeStats"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="46dp"
         android:text="Lifetime Stats"
         android:textSize="40sp"
         android:textColor="#14A5FF"
         android:textAppearance="?android:attr/textAppearanceLarge" />

     <TextView
         android:id="@+id/quizLifeTime"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/averageTimeStats"
         android:layout_below="@+id/textView1"
         android:layout_marginTop="32dp"
         android:text="Quizes Taken: "
         android:textAppearance="?android:attr/textAppearanceLarge" />
    
</RelativeLayout>