<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainMenu" >

    <Button
        android:id="@+id/button_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:onClick="statsClick"
        android:text="@string/stats" />

    <Button
        android:id="@+id/button_take_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_stats"
        android:layout_alignLeft="@+id/button_stats"
        android:layout_alignRight="@+id/button_stats"
        android:onClick="quizClick"
        android:text="@string/take_quiz" />

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_take_quiz"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:text="@string/movieQuiz"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#14A5FF"
        android:textSize="70sp"
        android:gravity="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="2000s Edition"
        android:textColor="#FFAA00"
        android:textSize="40sp"
        android:textStyle="italic" />

</RelativeLayout>